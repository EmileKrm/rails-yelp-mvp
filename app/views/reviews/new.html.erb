<h1>Write a new review for <%=@restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>

  <span>
    <%= f.submit "add a review", class: "btn btn-primary" %>
  </span>
  <span>
    <%= link_to "back", restaurants_path %>
  </span>
<% end %>
