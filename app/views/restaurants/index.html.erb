<div class="page-title container center">
  <h1>Here are all the restaurants:</h1>
  <%= link_to "add restaurant", new_restaurant_path%>
</div>
<div class="container">
  <% @restaurants.each do |restaurant| %>
    <div class="movie">

      <div class="movie-body">
        <h3><%=restaurant.name%></h3>
        <p><%= restaurant.address%></p>
      </div>

      <div class="list-inline movie-controls">
        <li><%= link_to(restaurant_path(restaurant)) do %>
          <i class="fa fa-eye" aria-hidden="true"></i>
          <%end%>
        </li>
        <li><%= link_to "add review", new_restaurant_review_path(restaurant) %></li>
      </div>

    </div>
  <%end%>
</div>
